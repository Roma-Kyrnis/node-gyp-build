{
  "name": "node-gyp-build",
  "version": "1.0.0",
  "main": "src/node-gyp-build.ts",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist node_modules",
    "lint": "eslint 'src/**/*.ts' && prettier --check 'src/**/*.ts'",
    "build:tsup": "tsup",
    "build:swc": "swc --out-dir dist --delete-dir-on-start src",
    "start:dev": "node --loader @swc-node/register/esm src/node-gyp-build.ts",
    "start:prod": "node dist/node-gyp-build.js"
  },
  "license": "MIT",
  "engines": {
    "node": ">=20.10.0"
  },
  "packageManager": "npm@10.2.5",
  "devDependencies": {
    "@stylistic/eslint-plugin-ts": "^1.5.3",
    "@swc-node/register": "^1.6.8",
    "@swc/cli": "^0.1.63",
    "@swc/core": "^1.3.103",
    "@swc/plugin-transform-imports": "^1.5.108",
    "@types/node": "^20.11.4",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-editorconfig": "^4.0.3",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "prettier": "^3.2.2",
    "simple-update-notifier": "^2.0.0",
    "ts-essentials": "^9.4.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
